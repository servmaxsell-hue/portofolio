generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  name              String
  email             String    @unique
  email_verified_at DateTime?
  password          String
  remember_token    String?
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  @@map("users")
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  description String   @db.LongText
  problem     String?  @db.LongText
  solution    String?  @db.LongText
  result      String?  @db.LongText
  image       String?  @db.LongText
  tech_stack  String
  github_url  String?
  live_url    String?
  category    String   @default("web")
  featured    Boolean  @default(false)
  order       Int      @default(0)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("projects")
}

model Article {
  id           Int       @id @default(autoincrement())
  title        String
  slug         String    @unique
  excerpt      String
  content      String    @db.LongText
  image        String?   @db.LongText
  tags         String?
  read_time    Int       @default(5)
  likes        Int       @default(0)
  published    Boolean   @default(false)
  published_at DateTime?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  comments     Comment[]

  @@map("articles")
}

model Comment {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  content    String
  approved   Boolean  @default(false)
  article_id Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  article    Article  @relation(fields: [article_id], references: [id], onDelete: Cascade)

  @@index([article_id], map: "comments_article_id_fkey")
  @@map("comments")
}

model Service {
  id               Int      @id @default(autoincrement())
  title            String
  slug             String   @unique
  description      String
  long_description String?
  icon             String   @default("code")
  features         String
  benefits         String?
  technologies     String?
  order            Int      @default(0)
  active           Boolean  @default(true)
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  @@map("services")
}

model Contact {
  id         Int       @id @default(autoincrement())
  name       String
  email      String
  subject    String?
  message    String
  read       Boolean   @default(false)
  replied_at DateTime?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt

  @@map("contacts")
}

model Setting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String

  @@map("settings")
}
